                ".*\\.mol2$",
                ".*\\.trr$",
                ".*\\.gro$",
                ".*\\.binpos$",
                ".*\\.xtc$",
                ".*\\.cif$",
                ".*\\.arc$",
                ".*\\.sqm$",
                ".*\\.sdf$",
                ".*\\.conflib$"
