                ".*\\.xtc$",
                ".*\\.trr$",
                ".*\\.cpt$",
                ".*\\.gro$",
                ".*\\.g96$",
                ".*\\.pdb$",
                ".*\\.tng$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.xtc$",
                    "description": "Path to the GROMACS trajectory file",
                    "edam": "format_3875"
                },
                {
                    "extension": ".*\\.trr$",
                    "description": "Path to the GROMACS trajectory file",
                    "edam": "format_3910"
