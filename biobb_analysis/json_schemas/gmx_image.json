        "wrapped_software": {
            "name": "GROMACS trjconv",
            "version": ">=2019.1",
            "license": "LGPL 2.1"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_traj_path",
        "input_top_path",
        "output_traj_path"
    ],
